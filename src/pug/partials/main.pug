- const cl = ["jobs-name","icon-star-empty"]
mixin label
    label(for="slide1")
    label(for="slide2")
    label(for="slide3")
    label(for="slide4")
mixin jobs(head,name,a)
    li(style!=attributes.style)
        p.jobs-company= head
        p(class=cl)= name 
        a(href="#")= a
        i(class="fa fa-caret-right")
mixin slides(src,name,count)
